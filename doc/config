### Example config ###
[monitor]
long:1600
height:900

[wallpaper]
provider:unsplash
local:/home/zero/Disk/Sabare/Wallpapers
topic:skullgirls
nfsw:false

[misc]
save:true

# If you only use Wallhaven it can be like:
[wallpaper]
provider:walhaven
topic:skullgirls
nfsw:false

[misc]
save:true

# If you only use Unsplash it can be like:
[monitor]
long:1600
height:900

[wallpaper]
provider:unsplash

[misc]
save:true

# If you only use your local Wallpapers it can be like:
[wallpaper]
provider:local
local:/home/zero/Disk/Sabare/Wallpapers
# Don't use "~"
